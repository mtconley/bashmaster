# bash_export -- define environmental variables
#Defaul PATH
export PATH="/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/Applications"

#Point to anaconda
export PATH="/Users/$USER/anaconda/bin:$PATH"

#Point to personal scripts
export PATH="/Users/$USER/Documents/root/docs/scripts:$PATH"

# added by Miniconda 3.10.1 installer
export PATH="/Users/$USER/miniconda/bin:$PATH"

# go to home/root
export root=~/Documents/root

# show wd in tab
export PROMPT_COMMAND='echo -ne "\033]0;${PWD##*/}\007"'

#Point to JAVA
export JAVA_HOME="/Library/Internet Plug-Ins/JavaAppletPlugin.plugin/Contents/Home"
